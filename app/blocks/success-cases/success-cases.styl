.success-cases
	max-width 444px
	width 100%
	color #000000
	font-family $pS
	&__title
		margin-bottom 50px
		font-size 34px
		font-weight 700
		letter-spacing 1.02px
		line-height 1
	// &__list

	&__item
		position relative
		margin-bottom 50px
		display flex
		justify-content flex-start
		&:hover
			.success-cases__court
				opacity 0.5
	&__link
		position absolute
		top 0
		left 0
		right 0
		bottom 0
	&__court
		position absolute
		top 50%
		right 0
		width 99px
		height 36px
		opacity 0
		color #767675
		font-family $pM
		font-size 16px
		font-weight 400
		letter-spacing 0.24px
		text-decoration none
		transform translateY(-50%)
	&__content
		margin-right 8px
		max-width 195px
		width 100%
	&__item-title
		margin-bottom 8px
		font-size 20px
		font-weight normal
		line-height 1.1

	&__text
		color #5d5d5d
		font-size 14px
		font-weight 400
		line-height 1.285

	&__photo

		width 83px
		height 83px
		overflow hidden
		img
			max-width 100%
			height auto
			border-radius 50%

	&__more
		position relative
		color #ee6463
		font-size 18px
		font-weight 400
		letter-spacing 1.8px
		line-height 1.222
		text-decoration none
		&:after
			position absolute
			top 100%
			left 0
			content ""
			width 100%
			height 1px
			opacity 1
			background #ee6464
			tr(opacity .1s ease)
		&:hover
			&:after
				opacity 0
				tr(opacity .1s ease)
