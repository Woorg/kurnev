.header
	&__in
		position relative
		padding-top 30px
		padding-bottom 33px
		display flex
		justify-content flex-start
		&:after,
		&:before
			position absolute
			top 0
			content ""
			width 1px
			height 824px
		&:after
			position absolute
			top 0
			left 15px
			background url('../images/general/line-left.png') 0 0 no-repeat
		&:before
			left 50%
			background url('../images/general/line-center.png') 0 0 no-repeat

	&__logo
		margin-right 70px
	&__nav
		margin-right 20px
		max-width 680px

	&__contacts
		margin-left auto
		max-width 456px

	&__phone
		margin-right 40px
	// &__email



.logo
	width 132px
	color #000000
	font-family $pM
	font-size 20px
	font-weight 700
	text-decoration none


.phone,
.email
	color #000000
	font-family $r
	font-size 20px
	font-weight 500
	letter-spacing 0.6px
	text-decoration none
	tr(color .1s ease)
	&:hover
		color #4285f4
		tr(color .1s ease)
.nav
	&__list
		display flex
		justify-content flex-start
	&__item
		margin-left 44px
	&__link
		color #000000
		font-family Roboto
		font-size 20px
		font-weight 500
		letter-spacing 0.6px
		text-decoration none
		tr(color .1s ease)
		&:hover
			color #4285f4
			tr(color .1s ease)
