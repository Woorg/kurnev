.page
	position relative
	background-color #ebebe8
	color #000000
	display flex
	min-height 100vh
	flex-direction column

	&__bg-banner
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-position 50% 0
		background-repeat no-repeat

	&__inner
		position relative
		z-index 1
		flex 1

	&__prediction
		margin-top 198px
		font-display swap
		font-size 14px
		line-height 1.571
		color #313439

.container
	margin-right auto
	margin-left auto
	padding-left 15px
	padding-right 15px
	max-width 1384px
	width 100%

.title
	font-size 26px
	font-weight 700
	text-transform uppercase

.button
	border none
	display inline-block
	padding-top 18px
	padding-bottom 17px
	padding-left 50px
	padding-right 50px
	background-color #4285f4
	color #fff
	text-decoration none
	tr(background-color .3s ease)
	&:hover
		background-color darken(#4285f4, 10)
		tr(background-color .3s ease)

.wysiwig
	p
		margin-bottom 84px
		font-family $pS
		font-size 22px
		font-weight 400
		letter-spacing 0.55px
		line-height 1.6
		&:last-child
			margin-bottom 0


.wysiwig-sec
	font-family $pS
	h2,h3
		margin-bottom 40px
		color #000000
		font-size 40px
		font-weight 700
	p
		margin-bottom 30px
		color #21242f
		font-size 16px
		font-weight 400
		line-height 1.5625



